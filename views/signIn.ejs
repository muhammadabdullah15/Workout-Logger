<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="signIn.css" />
  </head>
  <body>
    <div class="container">
      <!-- <form action="none"> -->
      <div class="form">
        <div class="sign-in-selector">
          <button id="signInButtonSelector">Sign In</button>
          <button id="signUpButtonSelector">Sign Up</button>
        </div>

        <input class="hover-animation" type="text" placeholder="Username" />
        <div class="password-field hover-animation">
          <input id="passwordInput" type="password" placeholder="Password" />
          <img id="passwordReveal" src="/eye-outline.svg" alt="Show Password" />
        </div>

        <button id="signInButton" class="hover-animation">Log In</button>
        Or
        <button class="google-button hover-animation">
          <img src="/logo-google.svg" alt="Google Logo" />
          Continue with google
        </button>
        <!-- </form> -->
      </div>
    </div>

    <script src="/signIn.js"></script>
  </body>
</html>
